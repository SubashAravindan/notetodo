<% include partials/header.ejs %>

<div class="container">
	<div class="row" id="noteForm">
		
		<div style="width: 30%; margin: 30px auto; min-width: 300px;">
			<h1 class="text-center">Edit the note <%=item.title%></h1>
			<form action="/items/<%=item.item_id%>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input type="text" placeholder="Title" name="title" class="form-control" required="true" value="<%=item.title%>">
				</div>
				<div class="form-group" class="noteOnly">
				    <label for="file">Image </label>
				    <input type="file" class="form-control-file" id="file" name="image">
				</div>
				<div class="form-group">
					<input type="text" placeholder="Label" name="label" class="form-control" value="<%=item.label%>">
				</div>
				<div class="form-group" id="contentBox">
					<textarea class="form-control" name="content" rows="3"><%=item.content%></textarea>
				</div>	
				Priority :
				<div class="form-check">
					  	<input class="form-check-input" type="radio" name="priority" id="priority1" value="1" checked>
					  	<label class="form-check-label" for="priority1">
					    Low
					  	</label>
				</div>
				<div class="form-check">
					  	<input class="form-check-input" type="radio" name="priority" id="priority2" value="2">
					  	<label class="form-check-label" for="priority2">
					    Medium
					 	 </label>
				</div>
				<div class="form-check">
					  	<input class="form-check-input" type="radio" name="priority" id="priority3" value="3">
					  	<label class="form-check-label" for="priority3">
					    High
					  </label>
				</div>			
				<div class="form-group" enctype="multipart/form-data">
					
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>	
			</form>	
			<a href="/items/<%=item.item_id%>">Back</a>		
		</div>
	</div>

</div>
<% include partials/footer.ejs %>