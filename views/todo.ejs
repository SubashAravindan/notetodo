<% include partials/header.ejs %>


<div id="container">
	<h1><%=item.title%> <span id="addTodo"><i class="fas fa-plus-square"></i></span></h1>
	<input type="text" placeholder="Add new Todo">
	<ul id="todolist">
		<% JSON.parse(item.content).forEach(a=>{ %>
		<li <%if(a.completed){%>class= "completed"<%}%>><span><i class='fas fa-trash'></i></span> <%=a.name%></li>
	<% }) %>
	</ul>
	<div class="text-center">
		<form method="POST" action="/items/<%=item.item_id%>?_method=PUT" enctype="multipart/form-data">
			<input type="text" name="dummy" id="dummy">
			<button id="saveBtn" class="btn btn-primary">Save Changes</button>
			<input type="submit" name="subBtn" id="subBtn">
		</form>
		<form action="/items/<%=item.item_id%>?_method=DELETE" method="POST" enctype="multipart/form-data">
			<button class="btn btn-danger" >Delete TO DO LIST</button>						
		</form>	

		<p><strong>Label : </strong><%=item.label%></p>
		<p><strong>Created : </strong><%=item.created.toString().substring(0,24)%></p>
		<p><strong>Edited : </strong><%=item.edited.toString().substring(0,24)%></p>
		<a href="/items/<%=item.item_id%>/access" class="btn btn-success btn-lg m-3" >Manage access permissions</a>
	</div>

</div>






<script type="text/javascript" src="/scripts/todo.js"></script>

<% include partials/footer.ejs %>